<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Registro'}) %>
<body>
<%- include('partials/headerNavbar') %>
    <form action="/user/register" method="post">
        <label for="name">Nombre:</label>
        <input type="text" name="name" id="name" value="<%= locals.old && old.name %>">
        <% if (locals.errors && errors.name) { %>
            <p class="feedback"><%= errors.name.msg %></p> 
        <% } %>

        <label for="lastName">Apellido:</label>
        <input type="text" name="lastName" id="lastName" value="<%= locals.old && old.lastName %>">
        <% if (locals.errors && errors.lastName) { %>
            <p class="feedback"><%= errors.lastName.msg %></p> 
        <% } %>


        <label for="email">Correo electrónico:</label>
        <input type="email" name="email" id="email" value="<%= locals.old && old.email %>">
        <% if (locals.errors && errors.email) { %>
            <p class="feedback"><%= errors.email.msg %></p>
        <% } %>


        <label for="password">Contraseña:</label>
        <input type="password" name="password" id="password" value="<%= locals.old && old.password %>">
        <% if (locals.errors && errors.password) { %>
            <p class="feedback"><%= errors.password.msg %></p>
        <% } %>

        <button type="submit">Registrarse</button>
    </form>

 <%- include('partials/footer') %>
</body>
</html>